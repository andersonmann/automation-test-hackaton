<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite CHROME" parallel="tests" thread-count="1"
	configfailurepolicy="continue" verbose="10">
	<listeners>
		<listener class-name="util.TestListener" />
	</listeners>

	<test name="Tests simulator iPhone X">
		<parameter name="platform" value="simulator" />
		<parameter name="device" value="iPhone X" />
		<classes>
			<class name="test.HomeTest" />
			<!-- <class name="test.OrderTest" /> -->
		</classes>
	</test>

	<test name="Tests simulator Galaxy S9">
	<parameter name="platform" value="simulator" />
	<parameter name="device" value="Galaxy S9" />
